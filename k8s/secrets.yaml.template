# IMPORTANT: This is a template file
# Copy this file to secrets.yaml and fill in your actual credentials
# DO NOT commit secrets.yaml to version control
# Add secrets.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: hfi-secrets
  namespace: hfi-system
  labels:
    app: hebrew-fintech-informant
type: Opaque
stringData:
  # X (Twitter) Credentials
  # Use a burner account for scraping
  X_USERNAME: "your_email@example.com"
  X_PASSWORD: "your_password_here"

  # OpenAI API Key
  # Get from: https://platform.openai.com/api-keys
  OPENAI_API_KEY: "sk-proj-xxxxxxxxxxxxxxxxxxxxx"

  # Database URL
  # Using SQLite on shared PVC
  DATABASE_URL: "sqlite:////app/data/hfi.db"

  # Redis URL (optional)
  # If using Redis for caching/queuing
  REDIS_URL: "redis://hfi-redis:6379/0"
